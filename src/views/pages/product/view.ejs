<%- include('../../components/headerComponent.ejs'); %>
<%- include('./menu.ejs'); %>

<div>
    <h1 class="header-text">
        Просмотр товаров
    </h1>
    <table>
        <thead>
        <tr>
            <th>Название</th>
            <th>Кол-во</th>
            <th>Цена</th>
            <th>Описание</th>
        </tr>
        </thead>
        <tbody>
        <% console.log(data); %>
        <% data.forEach(item => { %>
            <tr>
                <td><%= item.name %></td>
                <td><%= item.count %></td>
                <td><%= item.price %></td>
                <td><%= item.description %></td>
            </tr>
        <% }); %>
        </tbody>
    </table>
</div>

